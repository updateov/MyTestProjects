<Window x:Class="WPFPatternsApplication.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading Data" 
        Height="106" 
        Width="306"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False">
    <Grid>
        <ProgressBar x:Name="LoadingProgress" Minimum="0" Maximum="100" Height="30" Margin="5" IsIndeterminate="True" FlowDirection="RightToLeft" Orientation="Horizontal"/>
    </Grid>
</Window>
