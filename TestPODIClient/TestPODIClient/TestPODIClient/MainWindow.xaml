<Window x:Class="TestPODIClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestPODIClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <TextBox x:Name="textBoxResponse" MinHeight="25" Width="Auto" Margin="5,10,5,5"/>
        <Button x:Name="buttonGet" Content="Get Data" Width="60" HorizontalAlignment="Right" Margin="5" Click="buttonGet_Click"/>
    </StackPanel>
</Window>
