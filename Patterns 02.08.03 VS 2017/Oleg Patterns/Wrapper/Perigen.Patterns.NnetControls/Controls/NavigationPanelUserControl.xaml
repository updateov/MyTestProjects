<UserControl x:Class="Perigen.Patterns.NnetControls.Controls.NavigationPanelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Name="navigationPanel"
             d:DesignHeight="40" d:DesignWidth="300" 
             Unloaded="UserControl_Unloaded"
             SizeChanged="UserControl_SizeChanged">
    
    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <!--<RowDefinition Height="40"/>-->
        </Grid.RowDefinitions>

        <Border x:Name="borderPanel" BorderBrush="#dfdfdf" Height="31" Background="#f2f2f2" BorderThickness="0,2,0,2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ToolTip="{Binding PanelTooltip, ElementName=navigationPanel}" MouseEnter="Border_MouseEnter">
                <Canvas Name="canvasPanel"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </Border>

        <Line Stroke="#adadad" 
              X1="0" X2="{Binding Path=ActualWidth, RelativeSource={RelativeSource Self}}"
              Y1="32" Y2="32" StrokeThickness="1"/>
              
    </Grid>
</UserControl>
