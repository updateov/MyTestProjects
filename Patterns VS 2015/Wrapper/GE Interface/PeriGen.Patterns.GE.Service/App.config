<?xml version="1.0"?>
<configuration>
	<appSettings>
		<add key="config" value="PeriGen.Patterns.GE.Service.xml"/>
	</appSettings>
	<system.diagnostics>
		<trace autoflush="true"/>
		<sources>
			<source name="PatternsService" switchValue="All">
				<listeners>
					<add name="LogToEventLog" type="System.Diagnostics.EventLogTraceListener" initializeData="PeriGen Patterns Service">
						<filter type="System.Diagnostics.EventTypeFilter" initializeData="Information"/>
					</add>
					<add name="LogToFile"/>
				</listeners>
			</source>
			<source name="PatternsEngine" switchValue="All">
				<listeners>
					<add name="LogToEventLog" type="System.Diagnostics.EventLogTraceListener" initializeData="PeriGen Patterns Engine">
						<filter type="System.Diagnostics.EventTypeFilter" initializeData="Information"/>
					</add>
					<add name="LogToFile"/>
				</listeners>
			</source>
			<source name="PatternsInterface" switchValue="All">
				<listeners>
					<add name="LogToEventLog" type="System.Diagnostics.EventLogTraceListener" initializeData="PeriGen Patterns Interface">
						<filter type="System.Diagnostics.EventTypeFilter" initializeData="Information"/>
					</add>
					<add name="LogToFile"/>
				</listeners>
			</source>
		</sources>
		<sharedListeners>
			<add name="LogToFile" type="PeriGen.Patterns.Diagnostics.ExtendedXmlWriterTraceListener, PeriGen.Patterns.Diagnostics" initializeData="Logs\PeriGen.Patterns.Service.svclog" MaximumFileSize="52428800" MaximumFileCount="10"/>
		</sharedListeners>
	</system.diagnostics>
	<system.serviceModel>
		<services>
			<service name="PeriGen.Patterns.PatternsDataFeed">
				<endpoint address="" binding="webHttpBinding" contract="PeriGen.Patterns.ActiveXInterface.IPatternsDataFeed" behaviorConfiguration="endPointBehavior"/>
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:7802/PatternsDataFeed/"/>
					</baseAddresses>
				</host>
			</service>
		</services>
		<behaviors>
			<endpointBehaviors>
				<behavior name="endPointBehavior">
					<webHttp/>
				</behavior>
			</endpointBehaviors>
		</behaviors>
	</system.serviceModel>
	<system.net>
		<settings>
			<httpWebRequest useUnsafeHeaderParsing="true"/>
		</settings>
	</system.net>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
	</startup>
</configuration>
